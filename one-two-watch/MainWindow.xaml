<Window x:Class="one_two_watch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:one_two_watch"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Ellipse Fill="Azure" HorizontalAlignment="Left" Height="362" Margin="202,23,0,0" Stroke="Black" VerticalAlignment="Top" Width="383"/>

        <Button Background="LawnGreen" Content="On" HorizontalAlignment="Left" Height="42" Margin="432,293,0,0" VerticalAlignment="Top" Width="76" Click="PowerOn"/>
        <Button Background="Red" Content="Off" HorizontalAlignment="Left" Height="42" Margin="286,293,0,0" VerticalAlignment="Top" Width="76" Click="PowerOff" />

        <TextBlock FontStyle="Normal" TextAlignment="Center" FontSize="50" x:Name="TimerDisplay" HorizontalAlignment="Left" Height="188" Margin="242,89,0,0" TextWrapping="Wrap" Text="One-to-Watch" VerticalAlignment="Top" Width="300" />

        

    </Grid>
</Window>
